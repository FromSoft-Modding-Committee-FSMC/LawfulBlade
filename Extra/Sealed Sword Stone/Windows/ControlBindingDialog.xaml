<Window x:Class="Sealed_Sword_Stone.Windows.ControlBindingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sealed_Sword_Stone.Windows"
        mc:Ignorable="d"
        Title="Control Binding Dialog" Height="160" Width="320" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#FF202020" BorderBrush="#FF20A0F0" BorderThickness="1,1,1,1">
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBlock x:Name="hintText" Foreground="#FF65EEE5" TextAlignment="Center" FontSize="16px" FontWeight="Bold" FontStyle="Italic">Press any Key or Mouse button...</TextBlock>
    </StackPanel>
</Window>
