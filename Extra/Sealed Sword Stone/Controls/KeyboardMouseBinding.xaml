<UserControl x:Class="Sealed_Sword_Stone.Controls.KeyboardMouseBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sealed_Sword_Stone.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="nameField" Text="ControlName" Grid.Column="0" Grid.Row="0" Foreground="White" Background="#203050" FontWeight="Bold" Padding="4,2,2,2"/>
        <Button x:Name="mainCtrl" Grid.Column="1" Grid.Row="0" Foreground="White" Background="#202040" Click="OnMainCtrlClick">
            <TextBlock x:Name="mainCtrlTextField" FontWeight="Bold" TextAlignment="Center" Text="MainValue"/>
        </Button>
        <Button x:Name="altCtrl" Grid.Column="2" Grid.Row="0" Foreground="White" Background="#202040" Click="OnAltCtrlClick">
            <TextBlock x:Name="altCtrlTextField" FontWeight="Bold" TextAlignment="Center" Text="AltValue"/>
        </Button>
    </Grid>
</UserControl>
