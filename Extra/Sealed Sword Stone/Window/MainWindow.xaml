<Window x:Class="Sealed_Sword_Stone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:Sealed_Sword_Stone"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Sealed Sword Stone" Height="540" Width="960" MaxWidth="960" MaxHeight="540" MinWidth="960" MinHeight="537" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/LAUNCHER/960-540-Background.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="368px"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="24px"/>
        </Grid.RowDefinitions>

        <!-- Button Array -->
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Image x:Name="btnPlay" Width="192" Height="32" Source="/LAUNCHER/128-24-PlayButton.png" Margin="0,2,0,2" Opacity="0.5"/>
            <Image x:Name="btnConf" Width="192" Height="32" Source="/LAUNCHER/128-24-SettingsButton.png" Margin="0,2,0,2" Opacity="0.5"/>
            <Image x:Name="btnExit" Width="192" Height="32" Source="/LAUNCHER/128-24-ExitButton.png" Margin="0,2,0,2" Opacity="0.5"/>
        </StackPanel>
    </Grid>
</Window>
