<UserControl x:Class="LawfulBlade.Control.InstanceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LawfulBlade.Control"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="1024">
    <Grid Background="#FF202020">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.75*" />
            <RowDefinition Height="1.25*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image x:Name="instIconField" Grid.Column="0" Grid.RowSpan="3" Margin="8,8,8,8"/>
        <TextBlock x:Name="instNameField" Grid.Column="1" Grid.Row="0" Text="Instance Name" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0" FontSize="32" FontWeight="Bold" TextDecorations="Underline" Foreground="#FFF0F0F0"/>
        <TextBlock x:Name="instDescField" Grid.Column="1" Grid.Row="1" Text="Instance Desc Line #1&#xA;Instance Desc Line #2" Foreground="#FFF0F0F0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0"/>
        <StackPanel x:Name="tagList" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" Orientation="Horizontal"/>
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" BorderThickness="1,1,1,1" Width="24" Height="24"
                    ToolTip="Open..." Click="OnClickLaunch">
                <Image Source="{StaticResource 48-48Execute}"/>
            </Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" BorderThickness="1,1,1,1" Width="24" Height="24"
                    ToolTip="Manage Packages..." Click="OnClickManagePackages">
                <Image Source="{StaticResource 48-48Packages}"/>
            </Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" BorderThickness="1,1,1,1" Width="24" Height="24"
                    ToolTip="Create Shortcut..." Click="OnClickCreateShortcut">
                <Image Source="{StaticResource 48-48Shortcut}"/>
            </Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" BorderThickness="1,1,1,1" Width="24" Height="24"
                    ToolTip="Delete..." Click="OnClickDelete">
                <Image Source="{StaticResource 48-48Delete}"/>
            </Button>
        </StackPanel>
        
    </Grid>
</UserControl>
